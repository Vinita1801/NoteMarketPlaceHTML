@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/Admin.cshtml";
}


    <!-- My Profile -->
    <section id="my-profile">
        <div class="content-box-md">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 text-left">
                        <h2>My Profile</h2>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6 text-left profile-form">
                            <h5>First Name *</h5>
                            <div class="form-group">
                                <input type="text" class="form-control" id="firstname">
                            </div><br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6 text-left profile-form">
                            <h5>Last Name *</h5>
                            <div class="form-group">
                                <input type="text" class="form-control" id="lastname">
                            </div><br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6 text-left profile-form">
                            <h5>Email *</h5>
                            <div class="form-group">
                                <input type="text" class="form-control" id="email">
                            </div><br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6 text-left profile-form">
                            <h5>Secondary Email *</h5>
                            <div class="form-group">
                                <input type="text" class="form-control" id="secondaryemail">
                            </div><br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 col-sm-2 col-xs-2 text-left profile-form">
                            <h5>Phone Number</h5>
                            <div class="form-group">
                                <img src="~/images/MyProfileAdmin/arrow-down.png" alt="arrow-down" id="phoneno-arrow-down">
                                <input type="text" class="form-control phoneid" id="phonenum" placeholder="+91">
                            </div><br>
                        </div>

                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <div class="form-group">
                                <input type="text" class="form-control" id="phoneno" placeholder="Enter your phone number">
                            </div><br>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6 upload-profile-picture profile-form">
                            <h5>Profile Picture</h5>
                            <div class="form-group upload-profile-picture">
                                <input type="file" accept="image/*" class="form-control">
                            </div>

                            <div class="uploadmypic">
                                <img src="~/images/MyProfileAdmin/upload-file.png">
                                <h6>Upload a picture</h6>
                            </div>

                        </div>
                    </div>

                    <a id="btn-submit-admin" class="btn btn-blue" href="#" title="Submit" role="button">Submit</a>

                </div>
            </div>
        </div>
    </section>

   