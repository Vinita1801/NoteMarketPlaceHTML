<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <!-- Title -->
    <title>Notes MarketPlace</title>

    <!-- Favicon-->
    <link rel="shortcut icon" href="~/images/Homepage/favicon.ico">

    <!-- Google Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">


    <!-- Owl Carousel CSS -->
    <link rel="stylesheet " href="~/Content/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/owl.theme.default.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/style.css">

    <!-- Responsive Tabs CSS -->
    <link rel="stylesheet" href="~/Content/responsive.css">

</head>


<body data-spy="scroll" data-target=".navbar" data-offset="65">

    <!-- Header -->
    <header>
        <nav class="navbar navbar-fixed-top">
            <div class="container-fluid white-nav-top">
                <div class="site-nav-wrapper">

                    <div class="navbar-header">
                        <!-- Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!-- Logo -->
                        <a class="navbar-brand1 smooth-scroll" href="#">
                            <img src="~/images/Dashboard/logo.png" class="img-responsive" alt="logo">
                        </a>
                    </div>

                    <!-- Main Menu -->
                    <div class="container">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-right">
                                <li>@Html.ActionLink("Dashboard", "DashboardAdmin", null, new { @class = "smooth-scroll" })</li>

                                <li>
                                    <a class="smooth-scroll dropdown" href="#" role="button" id="dropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Notes</a>
                                    <div class="dropdown-menu dashboard-admin-notes text-center">
                                        <div class="acolor">@Html.ActionLink("Notes Under Review", "NotesUnderReview", null, new { @class = "smooth-scroll" })</div><br>
                                        <div class="acolor">@Html.ActionLink("Published Notes", "PublishedNotes", null, new { @class = "smooth-scroll" })</div><br>
                                        <div class="acolor">@Html.ActionLink("Downloaded Notes", "DownloadedNotes", null, new { @class = "smooth-scroll" })</div><br>
                                        <div class="acolor">@Html.ActionLink("Rejected Notes", "RejectedNotesAdmin", null, new { @class = "smooth-scroll" })</div><br>


                                    </div>
                                </li>

                                <li>@Html.ActionLink("Members", "Member", null, new { @class = "smooth-scroll" })</li>
                                <li>
                                    <a class="smooth-scroll dropdown" href="#" role="button" id="dropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Reports</a>
                                    <div class="dropdown-menu dashboard-admin-reports text-center">
                                        <div class="acolor">@Html.ActionLink("Spam Reports", "SpamReports", null, new { @class = "smooth-scroll" })</div><br>

                                    </div>
                                </li>
                                <li>
                                    <a class="smooth-scroll dropdown" href="#" role="button" id="dropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Settings</a>
                                    <div class="dropdown-menu dashboard-admin-notes text-center">
                                        <div class="acolor">@Html.ActionLink("Manage System Configuartion", "SystemConfiguration", null, new { @class = "smooth-scroll" })</div><br>
                                        <div class="acolor">@Html.ActionLink("Manage Administrator", "ManageAdministrator", null, new { @class = "smooth-scroll" })</div><br>
                                        <div class="acolor">@Html.ActionLink("Manage Category", "ManageCategory", null, new { @class = "smooth-scroll" })</div><br>
                                        <div class="acolor">@Html.ActionLink("Manage Type", "ManageType", null, new { @class = "smooth-scroll" })</div><br>
                                        <div class="acolor">@Html.ActionLink("Manage Countries", "ManageCountry", null, new { @class = "smooth-scroll" })</div><br>

                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown">
                                        <img src="~/images/Dashboard/user-img.png" href="#" role="button" id="dropdownMenuLink"
                                             data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alter="client" class="img-circle person-id">
                                        <div class="dropdown-menu dashboard-admin-person text-left">
                                            <div class="acolor">@Html.ActionLink("Update Profile", "MyProfile", null, new { @class = "smooth-scroll" })</div><br>
                                            <div class="acolor">@Html.ActionLink("Change Password", "ChangePassword", null, new { @class = "smooth-scroll" })</div><br>
                                            <div class="acolor item-logout">Logout</div>
                                        </div>
                                    </div>
                                </li>

                                <li>@Html.ActionLink("Logout", "login", null, new { @id = "login-btn", @class = "btn btn-blue", @title = "Logout", @role = "button" }) </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <!-- Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li>@Html.ActionLink("Dashboard", "DashboardAdmin", null, new { @class = "smooth-scroll" })</li>

                                <li>
                                    <a class="smooth-scroll dropdown" href="#" role="button" id="dropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Notes</a>
                                    <div class="dropdown-menu dashboard-admin-notes text-center">
                                        <div class="dropdown-item" href="#">Notes Under Review</div><br>
                                        <div class="dropdown-item" href="#">Published Notes</div><br>
                                        <div class="dropdown-item" href="#">Downloaded Notes</div><br>
                                        <div class="dropdown-item" href="#">Rejected Notes</div><br>


                                    </div>
                                </li>

                                <li>@Html.ActionLink("Members", "Member", null, new { @class = "smooth-scroll" })</li>
                                <li>
                                    <a class="smooth-scroll dropdown" href="#" role="button" id="dropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Reports</a>
                                    <div class="dropdown-menu dashboard-admin-reports text-center">
                                        <div class="dropdown-item" href="#">Spam Reports</div><br>

                                    </div>
                                </li>
                                <li>
                                    <a class="smooth-scroll dropdown" href="#" role="button" id="dropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Settings</a>
                                    <div class="dropdown-menu dashboard-admin-notes text-center">
                                        <div class="dropdown-item" href="#">Manage System Configuration</div><br>
                                        <div class="dropdown-item" href="#">Manage Administrator</div><br>
                                        <div class="dropdown-item" href="#">Manage Category</div><br>
                                        <div class="dropdown-item" href="#">Manage Type</div><br>
                                        <div class="dropdown-item" href="#">Manage Countries</div><br>

                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown">
                                        <img src="~/images/Dashboard/user-img.png" href="#" role="button" id="dropdownMenuLink"
                                             data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alter="client" class="img-circle person-id">
                                        <div class="dropdown-menu dashboard-admin-person text-left">
                                            <div class="dropdown-item" href="#">Update Profile</div><br>
                                            <div class="dropdown-item" href="#">Change Password</div><br>
                                            <div class="dropdown-item item-logout" href="#">Logout</div>
                                        </div>
                                    </div>
                                </li>

                                <li>@Html.ActionLink("Logout", "login", null, new { @id = "login-btn", @class = "btn btn-blue", @title = "Logout", @role = "button" }) </li>
                            </ul>
                        </div>
                    </div>


                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
   
    @RenderBody()

    <!-- Footer -->
    <footer id="footer-admin" class="navbar-fixed-bottom">

        <div class="row">
            <div class="text text-left">
                <hr>
                <p class="left-footer">
                    Version: 1.1.24
                </p>
            </div>

            <div class="text text-right">
                <p class="right-footer">Copyright &copy; Tatvasoft All rights reserved. </p>
            </div>
        </div>
    </footer>

    <!-- Footer Ends -->
    <!-- JQuery -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Wow JS -->
    <script src="~/Scripts/wow.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/script.js"></script>

</body>
