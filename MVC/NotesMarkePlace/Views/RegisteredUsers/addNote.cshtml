@model NotesMarkePlace.Models.AddNote

@{
    ViewBag.Title = "Add Notes";
    Layout = "~/Views/Shared/RegisteredUsers.cshtml";
}


<!-- Add Notes Heading -->
<section id="Contact-Us">
    <img src="~/images/Homepage/banner-with-overlay.jpg" alt="banner" class="img-responsive search">
    <div id="faq-content">
        <div class="container text-center" id="faq-content-inner">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">

                    <div class="page-heading ">
                        <h1>Add Notes</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- Add Notes Heading Ends -->
<!-- Basic book Details -->
<section id="basic-details">
    <div class="content-box-md">
        <div class="container">

            <!-- Basic Note Details -->
            <div class="sub-heading member-details">
                <h3>Basic Note Details</h3>
            </div>

            @using (Html.BeginForm("addNote", "RegisteredUsers", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {


                <div class="details">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.Title, "Title *")
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your notes title", @required = true } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.Category, "Category *")
                                @Html.DropDownListFor(model => model.Category, new SelectList(Model.categories, "ID", "Name"), "Select your category", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6 upload-profile-picture">
                            <div class="form-group">
                                @Html.LabelFor(m => m.DisplayPicture, "Display Picture *")
                                @Html.TextBoxFor(m => m.DisplayPictureFile, new { @class = "form-control", @type = "file" })
                            </div>

                            <div class="uploadmypic">
                                <img src="~/images/MyProfileAdmin/upload-file.png">
                                <h6>Upload a picture</h6>
                            </div>
                        </div>


                        <div class="col-md-6 upload-profile-picture">

                            <div class="form-group">
                                @Html.LabelFor(m => m.UploadNote, "Upload Notes *")
                                @Html.TextBoxFor(m => m.UploadNoteFile, new { @class = "form-control", @type = "file" })
                                @Html.ValidationMessageFor(model => model.UploadNoteFile, "", new { @class = "text-danger" })
                            </div>

                            <div class="uploadmypic">
                                <img src="~/images/AddNote/upload-note.png">
                                <h6>Upload your notes</h6>
                            </div>


                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.NoteType, "Type *")
                                @Html.DropDownListFor(model => model.NoteType, new SelectList(Model.types, "ID", "Name"), "Select your note type", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.NumberofPages, "Number of Pages *")
                                @Html.EditorFor(model => model.NumberofPages, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter number of note pages" } })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group text-left ">
                                @Html.LabelFor(m => m.Description, "Description *")
                                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control box-size", @id = "description", @placeholder = "Enter your description", @required = true } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>


                </div>


                <!-- Institution Information -->
                <div class="sub-heading member-details">
                    <h3>Institution Information</h3>
                </div>

                <div class="details">


                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.Country, "Country")
                                @Html.DropDownListFor(model => model.Country, new SelectList(Model.countries, "ID", "Name"), "Select your country", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.UniversityName, "Institution Name")
                                @Html.EditorFor(model => model.UniversityName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your institution name" } })
                            </div>
                        </div>

                    </div>


                </div>


                <!-- Course Details -->
                <div class="sub-heading member-details">
                    <h3>Course Details</h3>
                </div>

                <div class="details">


                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.Course, "Course Name")
                                @Html.EditorFor(model => model.Course, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your course name" } })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.CourseCode, "Course Code")
                                @Html.EditorFor(model => model.Course, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your course code" } })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-left">
                                @Html.LabelFor(m => m.Professor, "Professor/Lecturer")
                                @Html.EditorFor(model => model.Professor, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your professor name" } })
                            </div>
                        </div>

                    </div>


                </div>

                <!-- selling Information -->
                <div class="sub-heading member-details">
                    <h3>Selling Information</h3>
                </div>

                <div class="details">


                    <div class="row">

                        <div class="col-md-6">
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group text-left">
                                        @Html.LabelFor(m => m.IsPaid, "Sell For *")
                                        @Html.ValidationMessageFor(model => model.IsPaid, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="left margin-right">
                                        <div class="left">
                                            @Html.RadioButtonFor(model => model.IsPaid, new { htmlAttributes = new { @id = "free", @class = "custom-control-input" } })
                                        </div>
                                        <div class=" right margin-bottom">
                                            @Html.LabelFor(m => m.IsPaid, "Free", new { htmlAttributes = new { @class = "custom-control-label form-check" } })
                                        </div>
                                    </div>

                                    <div class="left">
                                        <div class="left">
                                            @Html.RadioButtonFor(model => model.IsPaid, new { htmlAttributes = new { @id = "paid", @class = "custom-control-input" } })
                                        </div>
                                        <div class=" right margin-bottom">
                                            @Html.LabelFor(m => m.IsPaid, "Paid", new { htmlAttributes = new { @class = "custom-control-label form-check" } })
                                        </div>
                                    </div>


                                </div>

                                <div class="col-md-12">
                                    <div class="form-group text-left sell-price">
                                        @Html.LabelFor(m => m.SellingPrice, "Sell Price *")
                                        @Html.EditorFor(model => model.SellingPrice, new { htmlAttributes = new { @class = "form-control", @id = "sell-price", @placeholder = "Enter your price" } })
                                        @Html.ValidationMessageFor(model => model.SellingPrice, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 upload-profile-picture ">

                            <div class="form-group">
                                @Html.LabelFor(m => m.NotesPreview, "Note Preview *")
                                @Html.TextBoxFor(m => m.NotesPreviewFile, new { @class = "form-control", @type = "file" })
                                @Html.ValidationMessageFor(model => model.NotesPreviewFile, "", new { @class = "text-danger" })
                            </div>

                            <div class="uploadmypic">
                                <img src="~/images/MyProfileAdmin/upload-file.png">
                                <h6>Upload a file</h6>
                            </div>


                        </div>


                    </div>


                </div>

                <div>

                    <button class="btn btn-sell" type="submit">save</button>
                    <!-- <button class="btn btn-sell btn-publish margin-left" type="submit">publish</button> -->

                </div>
            }

        </div><hr>
    </div>
</section>
<!-- Basic book Details Ends -->
