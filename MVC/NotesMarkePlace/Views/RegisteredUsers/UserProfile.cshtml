@model NotesMarkePlace.Models.userprofile

@{ 
    IEnumerable<NotesMarkePlace.Models.ReferenceData> gender = ViewData["Gender"] as IEnumerable<NotesMarkePlace.Models.ReferenceData>;
   
}

<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <!-- Title -->
    <title>@ViewBag.Title Notes MarketPlace</title>

    <!-- Favicon-->
    <link rel="shortcut icon" href="~/images/Homepage/favicon.ico">

    <!-- Google Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/style.css">

    <!-- Responsive Tabs CSS -->
    <link rel="stylesheet" href="~/Content/responsive.css">

    <!-- JQuery -->
    <script src="~/Scripts/jquery.min.js"></script>

</head>


<body data-spy="scroll" data-target=".navbar" data-offset="65">

    <!-- Header -->
    <header>
        <nav class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <div class="site-nav-wrapper">

                    <div class="navbar-header">
                        <!-- Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!-- Logo -->
                        <a class="navbar-brand smooth-scroll" href="#">
                            <img src="~/images/Homepage/top-logo.png" alt="logo">
                        </a>
                    </div>

                    <!-- Main Menu -->
                    <div class="container">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-right">
                                <li>@Html.ActionLink("Search Notes", "searchNotes", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Sell Your Notes", "Dashboard", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Buyer Requests", "BuyerRequests", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("FAQ", "FAQ", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Contact Us", "ContactUs", new { @class = "smooth-scroll" })</li>
                                <li>
                                    <div class="dropdown">
                                        <img src="~/images/Dashboard/user-img.png" href="#" role="button" id="dropdownMenuLink"
                                             data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alter="client" class="img-circle person-id">


                                        <div class="dropdown-menu text-center">
                                            <div class="dropdown-item" href="#">My Profile</div><br>
                                            <div class="dropdown-item" href="#">My Downloads</div><br>
                                            <div class="dropdown-item" href="#">My Sold Notes</div><br>
                                            <div class="dropdown-item" href="#">My Rejected Notes</div><br>
                                            <div class="dropdown-item" href="../RegisteredUser/changePassword.cshtml">Change Password</div>
                                            <div class="dropdown-item item-logout" href="#">Logout</div>
                                        </div>
                                    </div>

                                </li>
                                <li>@Html.ActionLink("Logout", "login", null, new { @id = "login-btn", @class = "btn btn-blue", @title = "Logout", @role = "button" }) </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <!-- Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li>@Html.ActionLink("Search Notes", "searchNotes", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Sell Your Notes", "Dashboard", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Buyer Requests", "BuyerRequests", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("FAQ", "FAQ", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Contact Us", "ContactUs", new { @class = "smooth-scroll" })</li>
                                <li>
                                    <div class="dropdown">
                                        <img src="~/images/Dashboard/user-img.png" href="#" role="button" id="dropdownMenuLink"
                                             data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alter="client" class="img-circle person-id-mobile-nav">


                                        <div class="dropdown-menu text-center mobile-menu-dropdown">
                                            <div class="dropdown-item" href="#">My Profile</div><br>
                                            <div class="dropdown-item" href="#">My Downloads</div><br>
                                            <div class="dropdown-item active" href="#">My Sold Notes</div><br>
                                            <div class="dropdown-item" href="#">My Rejected Notes</div><br>
                                            <div class="dropdown-item" href="#">Change Password</div>
                                            <div class="dropdown-item item-logout" href="#">Logout</div>
                                        </div>
                                    </div>

                                </li>
                                <li>@Html.ActionLink("Logout", "login", null, new { @id = "login-btn", @class = "btn btn-blue", @title = "Logout", @role = "button" }) </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!-- User Profile Heading -->
    <section id="Contact-Us">
        <img src="../images/ContactUs/banner-with-overlay.jpg" alt="banner" class="img-responsive search">
        <div id="faq-content">
            <div class="container text-center" id="faq-content-inner">
                <div class="row">
                    <div class="col-md-12">

                        <div class="page-heading ">
                            <h1>User Profile</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- User Profile Heading Ends -->
    <!-- Basic profile Details -->
    <section id="basic-user-details">
        <div class="content-box-md">
            <div class="container">

                <!-- Basic profile Details  -->
                <div class="sub-heading member-details">
                    <h4>Basic Profile Details</h4>
                </div>


               @using (Html.BeginForm("UserProfile", "RegisteredUsers", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="details">

                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.FirstName, "First Name *")
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your first name", @required = true } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.LastName, "Last Name *")
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your last name", @required = true } })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.EmailId, "Email *")
                                    @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your email address", @required = true } })
                                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.DOB, "Date of Birth")
                                    @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your date of birth", @name = "dob", @id = "dob" } })
                                    <span class="field-icon">
                                        <img src="~/images/UserProfile/calendar.png" onclick="setDatePicker(this)">
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.Gender, "Gender")
                                    <select class="form-control" name="gender" id="gender">
                                        <option value="">Select your gender</option>
                                        @foreach (NotesMarkePlace.Models.ReferenceData a in gender)
                                        {
                                            <option value="@a.Value">@a.Value</option>
                                        }
                                    </select>
                                    <script>
                                        $("#gender").val("@Request.QueryString["gender"]");
                                    </script>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group text-left ">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        @Html.LabelFor(m => m.PhoneNumber_CountryCode, "Phone Number")
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-xs-3">
                                        <select class="form-control phonecode">
                                            <option>+91</option>
                                        </select>
                                    </div>
                                    <div class="col-md-9 col-sm-9 col-xs-9 tel">
                                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your phone number", @type = "tel", @id = "phone-no-input", @name = "phone" } })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-12 upload-profile-picture profile-form user-profile-form">
                                    <h5 class="profile-pic-heading">Profile Picture</h5>
                                    <div class="form-group upload-profile-picture">
                                        @Html.EditorFor(model => model.ProfilePictureFile, new { htmlAttributes = new { @class = "form-control file-accept", @type = "file" } })

                                    </div>

                                    <div class="uploadmypic">
                                        <img src="~/images/MyProfileAdmin/upload-file.png">
                                        <h6>Upload a picture</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Address Details -->
                    <div class="sub-heading member-details">
                        <h4>Address Details</h4>
                    </div>

                    <div class="details">


                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.AddressLine1, "Address Line 1 *")
                                    @Html.EditorFor(model => model.AddressLine1, new { htmlAttributes = new { @class = "form-control", @name = "address-line1", @placeholder = "Enter your address" } })
                                    @Html.ValidationMessageFor(model => model.AddressLine1, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.AddressLine2, "Address Line 2 *")
                                    @Html.EditorFor(model => model.AddressLine2, new { htmlAttributes = new { @class = "form-control", @name = "address-line2", @placeholder = "Enter your address" } })
                                    @Html.ValidationMessageFor(model => model.AddressLine2, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.City, "City *")
                                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @name = "city", @placeholder = "Enter your city" } })
                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.State, "State *")
                                    @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", @name = "state", @placeholder = "Enter your state" } })
                                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.ZipCode, "Zip Code *")
                                    @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control", @name = "zipcode", @placeholder = "Enter your zipcode" } })
                                    @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.Country, "Country *")
                                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", @name = "country", @placeholder = "Enter your country" } })
                                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                    </div>


                    <!-- University and College Information -->
                    <div class="sub-heading member-details">
                        <h4>University and College Information</h4>
                    </div>

                    <div class="details">


                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.University, "University")
                                    @Html.EditorFor(model => model.University, new { htmlAttributes = new { @class = "form-control", @name = "university", @placeholder = "Enter your university" } })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    @Html.LabelFor(m => m.College, "College")
                                    @Html.EditorFor(model => model.College, new { htmlAttributes = new { @class = "form-control", @name = "college", @placeholder = "Enter your college" } })
                                </div>
                            </div>

                        </div>


                    </div>

                    <a id="btn-submit-admin" class="btn btn-blue" href="#" title="Submit" role="button">Submit</a>
                }
            </div><hr>
        </div>
    </section>
    <!-- Basic book Details Ends -->
    <!-- Footer -->
    <footer class="text-left">
        <div class="container">
            <div class="row">

                <div class="col-md-10 col-sm-8 col-xs-12">
                    <p>
                        <br>
                        Copyright &copy; TatvaSoft All rights reserved.
                    </p>
                </div>

                <div class="col-md-2 col-sm-4 col-xs-12">
                    <ul class="social-list">
                        <br/>
                        <li><a href="#"><img src="~/images/Homepage/facebook.png" alter="facebook"></a></li>
                        <li><a href="#"><img src="~/images/Homepage/twitter.png" alter="twitter"></a></li>
                        <li><a href="#"><img src="~/images/Homepage/linkedin.png" alter="linkedin"></a></li>
                    </ul>

                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends -->
    

    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/script.js"></script>

</body>

</html>
