                    </div>

                </div>

            </div>
        </div>

    </div>


</section>
<!-- About Ends -->
<!-- Users -->
<section id="users" class="text-center">
    <div class="content-box-md">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <div id="users-heading">
                        <div class="horizontal-heading">
                            <h5> How it Works</h5>
                        </div>
                    </div>

                    <div id="users-bottom">
                        <div class="col-md-6 text-center">
                            <div class="image img-circle text-center">
                                <img class="circle" src="~/images/Homepage/download.png" alt="download">
                            </div>
                            <h3>Download Free/Paid Notes</h3>
                            <h4>Get Material for your <br> Course etc.</h4>
                            <div id="users-btn-downloads">
                                @Html.ActionLink("Download", "searchNotes", null, new { @class = "btn btn-blue", @title = "Download", @role = "button" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="image img-circle">
                                <img src="~/images/Homepage/seller.png" alter="seller" class="circle">
                            </div>
                            <h3>Seller</h3>
                            <h4>Upload and Download Course <br> and Materials etc.</h4>
                            <div id="users-btn-seller">
                                @Html.ActionLink("Sell Book", "Dashboard", null, new { @class = "btn btn-blue", @title = "Sell Book", @role = "button" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
