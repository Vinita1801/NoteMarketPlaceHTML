@model NotesMarkePlace.Models.User


@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/NonRegisteredUsers.cshtml";
}


<!-- Home -->
<section id="home">

    <div class="content-box-lg">

        <div class="cotainer">

            <div class="row">

                <div class="col-md-12 wow fadeIn">

