                                        </div>
                                    </div>

                                </li>
                                <li>@Html.ActionLink("Logout", "login", null, new { @id = "login-btn", @class = "btn btn-blue", @title = "Logout", @role = "button" }) </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!-- Buyer Requests Notes -->
    <section id="sold-notes">
        <div class="content-box-md">
            <div class="container">
                <div class="row">
                   
                        <div class="col-md-6 col-sm-6 col-xs-12 buyer-requests-heading">
                            <h3>Buyer Requests</h3>
                        </div>

                        <form id="search_submit" action="/RegisteredUsers/BuyerRequests" method="get">

                            <div class="col-md-4 col-sm-4 col-xs-6">

                                <input type="text" class="form-control buyerrequests-search-textbox" id="search" name="search"
                                       value="@Request.QueryString["search"]" placeholder="Search" onchange="onSubmit()" />
                                

                                <img src="~/images/Dashboard/search-icon.svg" alter="search-icon" id="search-icon">
                            </div>

                            <div class="col-md-2 col-sm-4 col-xs-6">
                                <a class="btn buyerrequests-btn-search" href="#" title="Search" role="button">Search</a>
                            </div>

                        </form>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table class="table table-bordless table-buyer-requests text-center">
                                <thead>
                                    <tr>
                                        <th scope="col">Sr No.</th>
                                        <th scope="col">Note Title</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Buyer</th>
                                        <th scope="col">Sell Type</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Downloaded Date/Time</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        int index = 0;
                                        if (Request.QueryString["i"] == null || Request.QueryString["i"].Equals("1"))
                                        {
                                            index = 1;
                                        }
                                        else
                                        {
                                            index = Convert.ToInt32(Request.QueryString["i"]) * 10;
                                        }
                                    }

                                    @foreach (NotesMarkePlace.Models.Download n in Model)
                                    {
                                        NotesMarkePlace.Models.NotesMarketPlaceEntities1 db = new NotesMarkePlace.Models.NotesMarketPlaceEntities1();
                                        var user = db.Users.Where(e => e.Id == n.Downloader).FirstOrDefault();
                                        <tr>

                                            <td>@(index++)</td>
                                            <td class="buyerrequests-col2 dopointer" onclick="@("window.location.href='" + @Url.Action("NoteDetails","RegisteredUsers",new {NoteID=n.NoteID})+"'");">@n.NoteTitle</td>
                                            <td>@n.NoteCategory</td>
                                            <td>@user.EmailID</td>
                                            <td>Paid</td>

                                            <td>@n.PurchasedPrice</td>

                                            <td>@n.CreatedDate.Value.ToString("dd") @n.CreatedDate.Value.ToString("MMM") @n.CreatedDate.Value.ToString("yyyy"), @n.CreatedDate.Value.ToString("T")</td>

                                            <td>

                                                <img src="~/images/BuyerRequests/eye.png" class="img-eye">
                                                <div class="dropdown">
                                                    <img src="~/images/BuyerRequests/dots.png" class="img-dot" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alter="client">

                                                    <div class="dropdown-menu dropdown-buyer-requests text-center">
                                                        <div class="dropdown-item">
                                                            <a href="@Url.Action("AllowDownload","RegisteredUsers",new { i = Request.QueryString["i"], reqid = n.ID.ToString() })">Yes, I received</a>                                                           
                                                        </div>
                                                    </div>
                                                </div>

                                            </td>
                                        </tr>
                                    }
                    </tbody>
                    </table>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- Sold Notes Ends -->
    <!-- Pagination-->
    <section id="pagination2">
        <div id="page" class="text-center">
            <div class="row">
                @Html.PagedListPager(Model, i => Url.Action("BuyerRequests", "RegisteredUsers", new { i }), new PagedList.Mvc.PagedListRenderOptions
                {
                    ContainerDivClasses = null,
                    LiElementClasses = new string[] { "page-item page-link" },
                    UlElementClasses = new string[] { "pagination pagination-lg justify-content-center" },
                    LinkToNextPageFormat = "<i class='fa fa-chevron-right right-arrow'></i>",
                    LinkToPreviousPageFormat = "<i class='fa fa-chevron-left left-arrow'></i>",
                    MaximumPageNumbersToDisplay = 5,
                    DisplayEllipsesWhenNotShowingAllPageNumbers = false,
                    DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                    DisplayLinkToLastPage = PagedListDisplayMode.Never
                })

            </div> <hr>
        </div>
    </section>
    <!-- Pagination Ends-->
    <!-- Footer -->
    <footer class="text-left">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-sm-8 col-xs-12">
                    <p>
                        <br>
                        Copyright &copy; TatvaSoft All rights reserved.
                    </p>
                </div>

                <div class="col-md-2 col-sm-4 col-xs-12">
