@model NotesMarkePlace.Models.ContactUs


<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title -->
    <title>@ViewBag.Title  Notes MarketPlace</title>

    <!-- Favicon-->
    <link rel="shortcut icon" href="~/images/Homepage/favicon.ico">

    <!-- Google Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700" rel="stylesheet">


    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/style.css">

    <!-- Responsive Tabs CSS -->
    <link rel="stylesheet" href="~/Content/responsive.css">

</head>



<body data-spy="scroll" data-target=".navbar" data-offset="65">

    <!-- Header -->
    <header>
        <nav class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <div class="site-nav-wrapper">

                    <div class="navbar-header">
                        <!-- Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!-- Logo -->
                        <a class="navbar-brand smooth-scroll" href="#">
                            <img src="~/images/Homepage/top-logo.png" alt="logo">
                        </a>
                    </div>

                    <!-- Main Menu -->
                    <div class="container">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-right">
                                <li>@Html.ActionLink("Search Notes", "searchNotes",null, new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Sell Your Notes", "Dashboard", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("FAQ", "FAQ", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Contact Us", "ContactUs", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Login", "login", null, new { @id = "login-btn", @class = "btn btn-blue", @title = "Login", @role = "button" }) </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <!-- Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li>@Html.ActionLink("Search Notes", "searchNotes", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Sell Your Notes", "Dashboard", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("FAQ", "FAQ", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Contact Us", "ContactUs", new { @class = "smooth-scroll" })</li>
                                <li>@Html.ActionLink("Login", "login", null, new { @id = "login-btn", @class = "btn btn-blue", @title = "Login", @role = "button" }) </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!-- Contact Us Heading -->
    <section id="Contact-Us">
        <img src="~/images/ContactUs/banner-with-overlay.jpg" alt="banner" class="img-responsive search">
        <div id="faq-content">
            <div class="container text-center" id="faq-content-inner">
                <div class="row">
                    <div class="col-md-12">

                        <div class="page-heading ">
                            <h1>Contact Us</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- Contact Us Heading Ends -->
    <!-- Contact Us Form -->
    <section id="contact-us-form">
        <div class="content-box-md">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 contact-us-heading">
                        <h2>Get In Touch</h2>
                        <h4>Let us know how to get back to you</h4>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" id="contact-form-left">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <h5>Full Name *</h5>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @id = "name", @placeholder = "Enter your full name" } })
                                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                    </div><br>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    <h5>Email Address *</h5>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control", @id = "name", @placeholder = "Enter your email address" } })
                                        @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                                    </div><br>
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    <h5>Subject *</h5>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @id = "name", @placeholder = "Enter your subject" } })
                                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                    </div><br>
                                </div>
                            </div>

                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" id="contact-form-right">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <h5>Comments / Questions *</h5>
                                @Html.TextAreaFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control", @id = "message", @placeholder = "Message..." } })
                                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div id="btn-submit">
                            <button class="btn btn-submit" type="submit" title="Submit">Submit</button>
                        </div>
                    }
                </div>
            </div>
            <hr id="hr-contact-us">
        </div>
    </section>
    <!-- Contact Us Form Ends -->
    <!-- Footer -->
    <footer class="text-left">
        <div class="container">
            <div class="row">

                <div class="col-md-10 col-sm-8 col-xs-12">
                    <p>
                        <br>
                        Copyright &copy; TatvaSoft All rights reserved.
                    </p>
                </div>

                <div class="col-md-2 col-sm-4 col-xs-12">
                    <ul class="social-list">
                        <br/>
                        <li><a href="#"><img src="~/images/Homepage/facebook.png" alter="facebook"></a></li>
                        <li><a href="#"><img src="~/images/Homepage/twitter.png" alter="twitter"></a></li>
                        <li><a href="#"><img src="~/images/Homepage/linkedin.png" alter="linkedin"></a></li>
                    </ul>

                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends -->
    <!-- JQuery -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Wow JS -->
    <script src="~/Scripts/wow.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/script.js"></script>

</body>


</html>