@model NotesMarkePlace.Models.AddNote

<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <!-- Title -->
    <title>Notes MarketPlace</title>

    <!-- Favicon-->
    <link rel="shortcut icon" href="../images/home/favicon.ico">

    <!-- Google Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="../CSS/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../CSS/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="../CSS/style.css">

    <!-- Responsive Tabs CSS -->
    <link rel="stylesheet" href="../css/responsive.css">

</head>


<body data-spy="scroll" data-target=".navbar" data-offset="65">

    <!-- Header -->
    <header>
        <nav class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <div class="site-nav-wrapper">

                    <div class="navbar-header">
                        <!-- Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!-- Logo -->
                        <a class="navbar-brand smooth-scroll" href="../html/index.html">
                            <img src="../images/Homepage/top-logo.png" alt="logo">
                        </a>
                    </div>

                    <!-- Main Menu -->
                    <div class="container">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-right">
                                <li><a class="smooth-scroll" href="#">Search Notes</a></li>
                                <li><a class="smooth-scroll" href="#">Sell Your Notes</a></li>
                                <li><a class="smooth-scroll" href="#">FAQ</a></li>
                                <li><a class="smooth-scroll" href="#">Contact Us</a></li>
                                <li>
                                    <div class="dropdown">
                                        <img src="../images/Dashboard/user-img.png" href="#" role="button" id="dropdownMenuLink"
                                             data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alter="client" class="img-circle person-id">


                                        <div class="dropdown-menu text-center">
                                            <div class="dropdown-item" href="#">My Profile</div><br>
                                            <div class="dropdown-item" href="#">My Downloads</div><br>
                                            <div class="dropdown-item" href="#">My Sold Notes</div><br>
                                            <div class="dropdown-item" href="#">My Rejected Notes</div><br>
                                            <div class="dropdown-item" href="#">Change Password</div>
                                            <div class="dropdown-item item-logout" href="#">Logout</div>
                                        </div>
                                    </div>

                                </li>

                                <a id="login-btn" class="btn btn-blue" href="../html/login.html" title="Sell Book" role="button">Login</a>

                            </ul>
                        </div>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <!-- Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li><a class="smooth-scroll" href="#">Search Notes</a></li>
                                <li><a class="smooth-scroll" href="#">Sell Your Notes</a></li>
                                <li><a class="smooth-scroll" href="#">Buyer Requests</a></li>
                                <li><a class="smooth-scroll" href="#">FAQ</a></li>
                                <li><a class="smooth-scroll" href="#">Contact Us</a></li>
                                <li>
                                    <div class="dropdown">
                                        <img src="../images/Dashboard/user-img.png" href="#" role="button" id="dropdownMenuLink"
                                             data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alter="client" class="img-circle person-id-mobile-nav">


                                        <div class="dropdown-menu text-center mobile-menu-dropdown">
                                            <div class="dropdown-item" href="#">My Profile</div><br>
                                            <div class="dropdown-item" href="#">My Downloads</div><br>
                                            <div class="dropdown-item active" href="#">My Sold Notes</div><br>
                                            <div class="dropdown-item" href="#">My Rejected Notes</div><br>
                                            <div class="dropdown-item" href="#">Change Password</div>
                                            <div class="dropdown-item item-logout" href="#">Logout</div>
                                        </div>
                                    </div>

                                </li>


                                <li><a id="login-btn" class="btn btn-blue" href="#" title="Sell Book" role="button">Login</a>	</li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!-- Add Notes Heading -->
    <section id="Contact-Us">
        <img src="../images/ContactUs/banner-with-overlay.jpg" alt="banner" class="img-responsive search">
        <div id="faq-content">
            <div class="container text-center" id="faq-content-inner">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">

                        <div class="page-heading ">
                            <h1>Add Notes</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- Add Notes Heading Ends -->
    <!-- Basic book Details -->
    <section id="basic-details">
        <div class="content-box-md">
            <div class="container">

                <!-- Basic Note Details -->
                <div class="sub-heading member-details">
                    <h3>Basic Note Details</h3>
                </div>

                <div class="details">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Title *</label>
                                    <input type="text" class="form-control" name="first-name" value="" placeholder="Enter your notes title" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Category *</label>
                                    <select class="form-control">
                                        <option>Select category</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6 upload-profile-picture">
                                <div class="form-group">
                                    <label>Display Picture</label>
                                    <input type="file" accept="image/*" class="form-control">
                                </div>

                                <div class="uploadmypic">
                                    <img src="../images/MyProfileAdmin/upload-file.png">
                                    <h6>Upload a picture</h6>
                                </div>
                            </div>


                            <div class="col-md-6 upload-profile-picture">

                                <div class="form-group">
                                    <label>Upload Notes *</label>
                                    <input type="file" accept="image/*" class="form-control">
                                </div>

                                <div class="uploadmypic">
                                    <img src="../images/AddNote/upload-note.png">
                                    <h6>Upload your notes</h6>
                                </div>


                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Type</label>
                                    <select class="form-control">
                                        <option>Select your note type</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Number of Pages</label>
                                    <input type="text" class="form-control" name="pages" value="" placeholder="Enter number of note pages">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left ">
                                    <label>Description *</label>
                                    <textarea class="form-control box-size" id="description" value="" placeholder="Enter your description" required></textarea>
                                </div>
                            </div>

                        </div>
                    </form>

                </div>


                <!-- Institution Information -->
                <div class="sub-heading member-details">
                    <h3>Institution Information</h3>
                </div>

                <div class="details">

                    <form>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Country</label>
                                    <select class="form-control">
                                        <option>Select your country</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Institution Name</label>
                                    <input type="text" class="form-control" name="institution-name" value="" placeholder="Enter your institution name">
                                </div>
                            </div>

                        </div>
                    </form>

                </div>


                <!-- Course Details -->
                <div class="sub-heading member-details">
                    <h3>Course Details</h3>
                </div>

                <div class="details">

                    <form>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Course Name</label>
                                    <input type="text" class="form-control" name="course-name" value="" placeholder="Enter your cource name">

                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Course Code</label>
                                    <input type="text" class="form-control" name="course-code" value="" placeholder="Enter your course code">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group text-left">
                                    <label>Professor/Lecturer</label>
                                    <input type="text" class="form-control" name="professor-name" value="" placeholder="Enter your professor name">
                                </div>
                            </div>

                        </div>
                    </form>

                </div>

                <!-- selling Information -->
                <div class="sub-heading member-details">
                    <h3>Selling Information</h3>
                </div>

                <div class="details">

                    <form>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="row">

                                    <div class="col-md-12">
                                        <div class="form-group text-left">
                                            <label>Sell For *</label>
                                        </div>
                                        <div class="left margin-right">
                                            <div class="left">
                                                <input type="radio" id="free" name="purchase" class="custom-control-input ">
                                            </div>
                                            <div class=" right margin-bottom">
                                                <label class="custom-control-label" for="free"><span>Free</span></label>
                                            </div>
                                        </div>

                                        <div class="left">
                                            <div class="left">
                                                <input type="radio" id="paid" name="purchase" class="custom-control-input">
                                            </div>
                                            <div class=" right margin-bottom">
                                                <label class="custom-control-label form-check" for="paid"><span>Paid</span></label>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group text-left sell-price">
                                            <label>Sell Price *</label>
                                            <input type="text" class="form-control" name="sell-price" id="sell-price" value="" placeholder="Enter your price" required>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 upload-profile-picture ">

                                <div class="form-group">
                                    <label>Note Preview *</label>
                                    <input type="file" accept="image/*" class="form-control">
                                </div>

                                <div class="uploadmypic">
                                    <img src="../images/MyProfileAdmin/upload-file.png">
                                    <h6>Upload a file</h6>
                                </div>


                            </div>


                        </div>
                    </form>

                </div>

                <div>
                    <button class="btn btn-sell" type="submit">save</button>
                    <button class="btn btn-sell btn-publish margin-left" type="submit">publish</button>
                </div>


            </div><hr>
        </div>
    </section>
    <!-- Basic book Details Ends -->
    <!-- Footer -->
    <footer class="text-left">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-8 col-sm-8 col-xs-12">
                    <p>
                        <br>
                        Copyright &copy; TatvaSoft All rights reserved.
                    </p>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-4 col-xs-12">
                    <ul class="search-social-list">
                        <br>
                        <li><a href="#"><img src="../images/Homepage/facebook.png" alter="facebook"></a></li>
                        <li><a href="#"><img src="../images/Homepage/twitter.png" alter="twitter"></a></li>
                        <li><a href="#"><img src="../images/Homepage/linkedin.png" alter="linkedin"></a></li>
                    </ul>

                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends -->
    <!-- JQuery -->
    <script src="../js/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="../js/bootstrap/bootstrap.min.js"></script>

    <!-- Wow JS -->
    <script src="../js/wow/wow.min.js"></script>

    <!-- Custom JS -->
    <script src="../js/script.js"></script>

</body>

</html>
